<Window x:Class="bubbleT.NewAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bubbleT"
        mc:Ignorable="d"
        Title="Thêm tài khoản" Height="236" Width="333">
    <Canvas>
        <TextBox Name="txtboxUserName" 
            Height="23" Canvas.Left="102" TextWrapping="Wrap" Canvas.Top="19" Width="189"/>
        <TextBlock
            Canvas.Left="32" TextWrapping="Wrap" Text="Username:" Canvas.Top="26" Width="65"/>
        <TextBlock
            Canvas.Left="32" TextWrapping="Wrap" Text="Password:" Canvas.Top="61" Width="65"/>
        <TextBox x:Name="txtboxPassWord" 
            Height="23" Canvas.Left="102" TextWrapping="Wrap" Canvas.Top="54" Width="189"/>
        <TextBlock
            Canvas.Left="32" TextWrapping="Wrap" Text="Cấp tài khoản:" Canvas.Top="97" Width="79"/>
        <ComboBox Name="cboxAccountType" Canvas.Left="116" Canvas.Top="91" Width="120">
            <ComboBoxItem Tag="1" Content="Quản lý"/>
            <ComboBoxItem Tag="2" Content="Thu Ngân"/>
        </ComboBox>
        <Button Name="btnAdd" Click="btnAdd_Click" Content="Thêm" Canvas.Left="126" Canvas.Top="155" Width="75"/>


    </Canvas>
</Window>
